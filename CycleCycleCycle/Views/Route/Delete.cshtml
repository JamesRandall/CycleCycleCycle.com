@model CycleCycleCycle.Models.Route

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Route</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">DateCreated</div>
    <div class="display-field">@String.Format("{0:g}", Model.DateCreated)</div>

    <div class="display-label">Account</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.Account).ToString()</div>

    <div class="display-label">RoutePoints</div>
    <div class="display-field">@(Model.RoutePoints == null ? "None" : Model.RoutePoints.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


